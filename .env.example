# NXvms Environment Configuration
# Copy this file to .env and modify values for your environment

# ============================================================
# Database Configuration
# ============================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=nxvms
DB_PASSWORD=nxvms_password
DB_NAME=nxvms_db

# ============================================================
# Server Configuration
# ============================================================
NODE_ENV=production
PORT=3000

# JWT Secret - CHANGE THIS IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this

# JWT Expiration times
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ============================================================
# Storage Configuration
# ============================================================
STORAGE_PATH=/mnt/nxvms/storage

# ============================================================
# CORS Configuration
# ============================================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost

# ============================================================
# FFmpeg Configuration
# ============================================================
FFMPEG_PATH=ffmpeg
FFMPEG_TIMEOUT=30000

# ============================================================
# Video Settings
# ============================================================
# Default video codec
VIDEO_CODEC=h264

# Default audio codec
AUDIO_CODEC=aac

# Bitrate for transcoding (e.g., 2000k)
BITRATE=2000k

# ============================================================
# Client Configuration
# ============================================================
# API base URL for frontend
VITE_API_BASE_URL=http://localhost:3000/api/v1

# Debug mode for frontend
VITE_DEBUG=false

# ============================================================
# Application Settings
# ============================================================
# Application name
APP_NAME=NXvms

# Application environment
APP_ENV=production

# ============================================================
# Logging Configuration
# ============================================================
LOG_LEVEL=info
LOG_FORMAT=json
